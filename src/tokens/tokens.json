{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "metadata": {
    "version": "1.0.0",
    "brand": "Lendario",
    "theme": "dark"
  },
  "color": {
    "$type": "color",
    "primary": {
      "gold": { "$value": "#D4AF37" },
      "gold-dark": { "$value": "#B8962E" },
      "gold-light": { "$value": "#E4C84A" }
    },
    "background": {
      "base": { "$value": "#0A0A0F" },
      "elevated": { "$value": "#111116" },
      "surface": { "$value": "#1a1a1f" }
    },
    "text": {
      "primary": { "$value": "#FFFFFF" },
      "secondary": { "$value": "#A1A1AA" },
      "muted": { "$value": "#71717A" },
      "inverse": { "$value": "#0A0A0F" }
    },
    "semantic": {
      "success": { "$value": "#22C55E" },
      "warning": { "$value": "#F59E0B" },
      "error": { "$value": "#EF4444" },
      "info": { "$value": "#3B82F6" }
    },
    "border": {
      "default": { "$value": "rgba(255, 255, 255, 0.1)" },
      "subtle": { "$value": "rgba(255, 255, 255, 0.05)" },
      "emphasis": { "$value": "rgba(212, 175, 55, 0.3)" }
    }
  },
  "spacing": {
    "$type": "dimension",
    "0": { "$value": "0" },
    "1": { "$value": "0.25rem" },
    "2": { "$value": "0.5rem" },
    "3": { "$value": "0.75rem" },
    "4": { "$value": "1rem" },
    "5": { "$value": "1.25rem" },
    "6": { "$value": "1.5rem" },
    "8": { "$value": "2rem" },
    "10": { "$value": "2.5rem" },
    "12": { "$value": "3rem" },
    "16": { "$value": "4rem" },
    "20": { "$value": "5rem" },
    "24": { "$value": "6rem" }
  },
  "typography": {
    "family": {
      "$type": "fontFamily",
      "sans": { "$value": "'Inter', sans-serif" },
      "serif": { "$value": "'Source Serif 4', serif" },
      "display": { "$value": "'Rajdhani', sans-serif" },
      "mono": { "$value": "'JetBrains Mono', monospace" }
    },
    "size": {
      "$type": "dimension",
      "xs": { "$value": "0.75rem" },
      "sm": { "$value": "0.875rem" },
      "base": { "$value": "1rem" },
      "lg": { "$value": "1.125rem" },
      "xl": { "$value": "1.25rem" },
      "2xl": { "$value": "1.5rem" },
      "3xl": { "$value": "1.875rem" },
      "4xl": { "$value": "2.25rem" },
      "5xl": { "$value": "3rem" }
    },
    "weight": {
      "$type": "number",
      "normal": { "$value": 400 },
      "medium": { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold": { "$value": 700 }
    }
  },
  "radius": {
    "$type": "dimension",
    "none": { "$value": "0" },
    "sm": { "$value": "0.25rem" },
    "md": { "$value": "0.375rem" },
    "lg": { "$value": "0.5rem" },
    "xl": { "$value": "0.75rem" },
    "2xl": { "$value": "1rem" },
    "full": { "$value": "9999px" }
  },
  "shadow": {
    "$type": "shadow",
    "sm": { "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)" },
    "md": { "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1)" },
    "lg": { "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1)" },
    "xl": { "$value": "0 20px 25px -5px rgba(0, 0, 0, 0.1)" },
    "glow": { "$value": "0 0 20px rgba(212, 175, 55, 0.3)" }
  },
  "motion": {
    "duration": {
      "$type": "duration",
      "fast": { "$value": "100ms" },
      "normal": { "$value": "200ms" },
      "slow": { "$value": "300ms" },
      "slower": { "$value": "500ms" }
    }
  }
}
