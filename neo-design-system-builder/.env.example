# Neo Design System - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment: development | staging | production
VITE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3000/api

# Gemini API (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Sentry Error Tracking
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Release version (auto-set in CI)
VITE_RELEASE=neo-design-system@1.0.0

# Enable Analytics
VITE_ENABLE_ANALYTICS=false

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable experimental features
VITE_FEATURE_AI_SUGGESTIONS=false
VITE_FEATURE_EXPORT_FIGMA=false
VITE_FEATURE_COLLABORATION=false

# Debug mode
VITE_ENABLE_DEBUG=true

# ===========================================
# BUILD CONFIGURATION
# ===========================================

NODE_ENV=development

# ===========================================
# THIRD-PARTY INTEGRATIONS (CI ONLY)
# ===========================================

# Chromatic (Visual Testing) - Set in CI
# CHROMATIC_PROJECT_TOKEN=

# Codecov (Coverage Reporting) - Set in CI
# CODECOV_TOKEN=

# Vercel - Set in CI
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Mock API responses
VITE_MOCK_API=false

# Disable telemetry
VITE_DISABLE_TELEMETRY=true
